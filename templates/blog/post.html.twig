            </li>
            {% for translationId in post.translationsIds %}
                {% set translatedPost = posts.get(translationId) %}
                {% if translatedPost.language == 'en' %}
                    <li>
                        <a href="{{ path('blog_post', {date: translatedPost.date | date('Y-m-d'), slug: translatedPost.slug}) }}"
