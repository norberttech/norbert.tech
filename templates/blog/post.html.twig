{% extends 'base.html.twig' %}

{% block language %}{{ post.language }}{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="px-2 py-5 sm:px-4 md:px-8 lg:px-12 mx-auto max-w-4xl">
        <ul class="mt-2 pl-[20px] flex flex-wrap gap-2 sm:gap-4">
