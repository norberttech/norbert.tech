<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=2.0, minimum-scale=1.0">

    <title>{{ block('title') | default("Norbert Orzechowicz") }}</title>
    <meta property="og:title" content="{{ block('title') }}" />
    <meta name="twitter:title" content="{{ block('title') }}" >

    <meta name="description" content="{{ block('description')  }}">
    <meta property="og:description" content="{{ block('description') }}">
    <meta name="twitter:description" content="{{ block('description') }}">

    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
    <meta property="og:image" content="{{ absolute_url(asset('images/avatar.jpeg')) }}" />
    <meta property="og:image:type" content="image/svg+xml" />
    <meta property="og:image:alt" content="Norbert Orzechowicz - Personal Website" />

    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
    <meta name="twitter:image" content="{{ absolute_url(asset('images/avatar.jpeg')) }}">
    <meta name="twitter:site" content="@norbert_tech" />
    <meta name="twitter:creator" content="@norbert_tech" />

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicons/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicons/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicons/favicon-16x16.png') }}">
    <link rel="shortcut icon" href="{{ asset('images/favicons/favicon.ico') }}">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ importmap() }}
    {% endblock %}
</head>
{% if google_analytics_id %}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ google_analytics_id }}">{% if google_conversion_tag %}gtag('config', '{{ google_conversion_tag }}');{% endif %}</script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '{{ google_analytics_id }}');
</script>
{% endif %}
<body class="scroll-smooth text-black relative min-h-screen pb-16">

    <header class="py-2 px-4 bg-sky-50">
        <div class="grid grid-cols-2 gap-4 mx-auto max-w-screen-2xl mb-8">
            <div class="text-left">
                <a href="{{ path('home') }}" class="text-lg">
                    norbert.tech
                </a>
            </div>
            <div class="text-right">
                <a href="{{ path('blog') }}" class="text-lg inline">
                    <img src="{{ asset('images/icons/article.svg') }}" alt="GitHub" width="32" height="32" class="inline"> Blog
                </a>
            </div>
        </div>
        <div class="grid grid-cols-3 gap-4 mx-auto max-w-screen-2xl">
            <div class="text-center">
                <div class="mb-4">
                    <img src="{{ asset('images/avatar.jpeg') }}" alt="Norbert Orzechowicz" class="rounded-full w-[250px] h-[250px] object-cover inline">
                </div>
            </div>
            <div class="pt-16 px-6">
                <h2 class="font-bold">My name is Norbert,</h2>
                <p class="mb-2">
                    I'm a software architect with a focus on designing and building highly scalable web applications and data processing systems.
                </p>
                <p class="mb-2">
                    In my spare time, I maintain several open-source projects and enjoy automating and optimizing everything around me.
                </p>
            </div>
            <div class="pl-24">
                <h2 class="text-lg font-bold">Links</h2>
                <ul class="list-disc pl-6">
                    <li>
                        <a href="https://twitter.com/norbert_tech" target="_blank">
                            <img src="{{ asset('images/icons/brand/x.svg') }}" alt="Twitter" class="inline w-[18px] h-[18px]"> @norbert_tech
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/norberttech" target="_blank">
                            <img src="{{ asset('images/icons/brand/github.svg') }}" alt="Twitter" class="inline w-[18px] h-[18px]"> @norberttech
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/norberttech/" target="_blank">
                            <img src="{{ asset('images/icons/brand/linkedin.svg') }}" alt="Twitter" class="inline w-[18px] h-[18px]"> @norberttech
                        </a>
                    </li>
                    <li>
                        <a href="mailto:contact@norbert.tech">
                            <img src="{{ asset('images/icons/mail.svg') }}" alt="Twitter" class="inline w-[18px] h-[18px]"> contact@norbert.tech
                        </a>
                    </li>
                    <li>
                        <a href="https://translate.google.com/translate?hl=en&sl=pl&tl=en&u=http%3A%2F%2Fzawarstwaabstrakcji.pl">
                            <img src="{{ asset('images/icons/www.svg') }}" alt="Twitter" class="inline w-[18px] h-[18px]"> https://zawarstwaabstrakcji.pl
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="mx-auto max-w-screen-2xl mb-8 pt-4">
        {% block content %}{% endblock %}
    </main>

    <footer class="p-4 bg-sky-50 absolute bottom-0 w-full">
        <div class="mx-auto max-w-screen-2xl text-center">
            <a href="{{ path('home') }}">by @norbert_tech</a>
        </div>
    </footer>
</body>
</html>