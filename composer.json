{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "flow-php/types": "^0.25.0",
        "norberttech/static-content-generator-bundle": "1.x-dev",
        "presta/sitemap-bundle": "^4.2",
        "symfony/asset": "6.4.*",
        "symfony/asset-mapper": "6.4.*",
        "symfony/cache": "6.4.*",
        "symfony/config": "6.4.*",
        "symfony/console": "6.4.*",
        "symfony/dotenv": "6.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "6.4.*",
        "symfony/runtime": "6.4.*",
        "symfony/stimulus-bundle": "^2.18",
        "symfony/twig-bundle": "6.4.*",
        "symfony/yaml": "6.4.*",
        "symfonycasts/tailwind-bundle": "0.6.0",
        "twig/extra-bundle": "^3.10"
    },
    "require-dev": {
        "carthage-software/mago": "^0.26.1",
        "phpunit/phpunit": "^11.5",
        "symfony/web-profiler-bundle": "^6.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "NorbertTech\\Portfolio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NorbertTech\\Portfolio\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@importmap:install",
            "@build:tailwind"
        ],
        "post-update-cmd": [
            "@importmap:install",
            "@build:tailwind"
        ],
        "cs:php:fix": [
            "vendor/bin/mago fmt"
        ],
        "static:analysis": [
            "vendor/bin/mago fmt --dry-run"
        ],
        "assets:clear": "rm -rf public/assets",
        "importmap:install": "bin/console importmap:install",
        "build:assets": [
            "@assets:clear",
            "@importmap:install",
            "@build:tailwind",
            "bin/console asset-map:compile"
        ],
        "build:tailwind": [
            "bin/console tailwind:build"
        ],
        "build": [
            "rm -rf public/assets",
            "rm -rf build",
            "APP_ENV=prod bin/console cache:clear",
            "APP_ENV=prod bin/console importmap:install",
            "APP_ENV=prod bin/console tailwind:build --minify",
            "APP_ENV=prod bin/console asset-map:compile",
            "APP_ENV=prod bin/console presta:sitemaps:dump",
            "APP_ENV=prod bin/console static-content-generator:generate:routes --clean",
            "APP_ENV=prod bin/console static-content-generator:copy:assets -d public"
        ]
    }
}
